{
  "name": "@claude/tdd-scaffold",
  "version": "2.0.0",
  "description": "TDD scaffold MCP server for Claude Code environment",
  "main": "mcp-server/index.js",
  "type": "module",
  "bin": {
    "tdd-scaffold-mcp": "./mcp-server/index.js"
  },
  "scripts": {
    "start": "node mcp-server/index.js",
    "dev": "nodemon mcp-server/index.js",
    "install:mcp": "node scripts/install-mcp.js"
  },
  "keywords": [
    "tdd",
    "claude-code",
    "test-driven-development",
    "scaffold",
    "task-master",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Claude TDD Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "mcp-server/",
    "claude-assets/",
    "scripts/",
    "README.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "fs-extra": "^11.1.1",
    "inquirer": "^8.2.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.22"
  },
  "claudeCode": {
    "required": true,
    "minVersion": "1.0.0",
    "features": [
      "mcp",
      "agents", 
      "hooks",
      "commands"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/claude-tdd-scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/claude-tdd-scaffold/issues"
  },
  "homepage": "https://github.com/your-org/claude-tdd-scaffold#readme"
}